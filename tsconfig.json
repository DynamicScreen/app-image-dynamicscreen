{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true,
        "jsx": "preserve",
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types",
            "resources/js/@types"
        ],
        "baseUrl": ".",
        "paths": {
//            "@/*": ["./../../../../*"],
        }
    },
    "exclude": [
        "./node_modules"
    ],
}
